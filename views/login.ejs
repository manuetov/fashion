<!DOCTYPE html>
<html lang="en">

<head>
  <title>All Vendors</title>
  <%- include('partials/head'); %>

</head>

<nav>
  <%- include('partials/navbar'); %>
</nav>

<body>
  <section class="p-5 vendedores">
    <div class="login">
      <div class="logo">
        <img src=/images/logo_secondLife_200.png alt="logo">
      </div>
      <div class="text-center mt-4 mail"> Regístrate
      </div>
      <form action="/vendors/login" method="post">
        <div class="p-3 mt-3 ">
          <div class="form-field d-flex align-items-center"> <span class="far fa-user">
            </span> <input type="email" name="email" id="userName" placeholder="e-mail">
          </div>
          <div class="form-field d-flex align-items-center"> <span class="fas fa-key">
            </span> <input type="password" name="password" id="pwd" placeholder="Password">
          </div>
          <p>
            <%- message %>
          </p>
          <button type="submit" class="btn mt-3">Login</button>
      </form>
      <div class="text-center fs-6"> <a href="#">Olvidaste tu password?</a> o
        <a href="/vendors/createVendor">Regístrate</a>
      </div>

    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>
