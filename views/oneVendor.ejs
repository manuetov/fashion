<body>

  <!-- ============================= VENDOR ================================================ -->
  <section class="pt-4 mt-5">
    <div class="row p-3 vendedores">
      <div class="col-md-12 col-xs-6">
        <div class="d-flex flex-wrap justify-content-center">
            <div class="card card-vendors p-3 py-4 m-2" style="width: 18rem">
              <div class="text-center card-body"> <img src="/images/vendors/<%- resultVendor[0].img %>"
                  class="rounded-circle" style="max-width:10rem; max-height:10rem;">
                <h3 class="fs-5 mt-2">
                  <%- resultVendor[0].name %>
                </h3>
                <span class="mt-1 clearfix">
                  <%- resultVendor[0].surname %>
                </span>
                <span class="mt-1 clearfix">
                  <%- resultVendor[0].phone %>
                </span>
                <small class="mt-4">
                  <%- resultVendor[0].description %>
                </small><br>
                <a href="/vendors/showUpdateVendorForm/<%- resultVendor[0].vendor_id %>" class="btn btn-primary m-2">Editar
                  vendedor</a>
                <br />
                <a href="/vendors/deleteVendor/<%- resultVendor[0].vendor_id %>" class="btn btn-danger m-2">Eliminar vendedor</a>
                <br />
                <a href="/products/showFormProduct/<%- resultVendor[0].vendor_id %>" class="btn btn-warning m-2">Añadir
                  producto</a>
              </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </section>
  <!-- ============================= PRODUCTS ================================================ -->
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="card card-products">
        <div class="row d-flex mt-5 align-items-center">
          <% resultProduct.forEach( product=> { %>
            <div class="col-md-3 col-lg-3">
              <div class="card card-1">
                <div class="row">
                  <div class="fa fa-heart like like-unchecked"></div>
                </div>
                <div class="product-pic">
                  <img class="pic1" style="max-width:14rem; max-height:14rem;" 
                  src="/images/products/<%-product.img %>">
                </div>
                <div>
                  <h3 class="product-name mt-1 text-center">
                    <%- product.name %>
                  </h3>
                  <h5 class="product-name">
                    <%- product.description %>
                  </h5>
                </div>
                <div class="row px-3 justify-content-between">
                  <p class="price">
                    <%- product.price %> €
                  </p>
                  <div class="stars">
                    <span class="fa fa-star star-inactive"></span> <span class="fa fa-star star-inactive">
                    </span> <span class="fa fa-star star-inactive"></span> <span class="fa fa-star"></span>
                    <span class="fa fa-star mb-5"></span>
                    <a href="/products/showEditFormProduct/<%- product.product_id %>" class="btn btn-primary m-2">Editar
                      producto</a> 
                    <a href="/products/deleteProduct/<%- product.product_id %>/<%- product.vendor_id %>"
                      class="btn btn-danger m-2">Eliminar producto</a>  
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </div>
  </div>

  <footer>
    <%- include('partials/footer'); %>
  </footer>

