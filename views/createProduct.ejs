<!DOCTYPE html>
<html lang="en">

<head>
  <title>All Vendors</title>
  <%- include('partials/head'); %>

</head>

<nav>
  <%- include('partials/navbar'); %>
</nav>

<body>

  <section class="p-5 vendedores">
    <div class="formularios">
      <div class="logo">
        <img src=/images/logo_secondLife_200.png alt="logo">
      </div>
      <div class="text-center mt-3 p-3 fs-3"> Añade tu producto
      </div><br>
      <form action="/products/createProduct/<%- vendor_id %>" method="post" enctype="multipart/form-data">
  
  
        <!-- --------------------------------------------------- -->
        <div class="form-field d-flex align-items-center"> <span class="">
          </span> <input type="text" name="name" id="name" placeholder="marca">
        </div>
        <div>
          <label for="description" class="form-label">Descripción</label>
          <textarea name="description" msg cols="60" rows="5" class="form-control" id="desc"></textarea><br>
        </div>

        <div class="form-field d-flex align-items-center"> <span class="fa fa-money">
        </span> <input type="text" name="price" id="price" placeholder="precio">
      </div>
  
        <div class="form-field d-flex align-items-center">
          <input type="file" class="form-control" id="avatar" name="img" />
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary w-25 alingn-self-center">Enviar</button>
        </div>
      </form>
    </div>
  </section>

  <footer>
    <%- include('partials/footer'); %>
  </footer>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
</body>

</html>
