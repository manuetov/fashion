<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>


    <%- include('navbar') %>


    <h1>Esta es la vista de todos los usuarios</h1>

    <% resultVendor.forEach( vendor => { %>
      <div class="card" style="width: 18rem">
        <img src="/images/vendor/<%-vendor.img %>" class="card-img-top" alt="..."/>
        <div class="card-body">
          <h5 class="card-title"><%- vendor.name %></h5>
          <p class="card-text"><%- vendor.surname %></p>
          <a href="/vendors/oneVendor/<%- vendor.vendor_id %>" class="btn btn-primary">Ver más</a>
        </div>
      </div>
    <% }) %>
    <hr />
    <hr />

    <% resultProduct.forEach( product => { %>
    <p>Nombre: <%- product.product_name %></p>
    <p>Descripción: <%- product.description %></p>
    <p>Precio: <%- product.precio %></p>
    <hr />
    <% }) %>

    </select>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
